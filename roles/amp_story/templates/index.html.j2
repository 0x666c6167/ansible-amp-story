<!DOCTYPE html>
<html amp lang="en">
  <head>
    <meta charset="utf-8" />
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script
      async
      custom-element="amp-story"
      src="https://cdn.ampproject.org/v0/amp-story-1.0.js"
    ></script>
    <title>{{storyTitle}}</title>
    <link rel="canonical" href="{{storyCanonical}}" />
    <meta
      name="viewport"
      content="width=device-width,minimum-scale=1,initial-scale=1"
    />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;800&display=swap');
    </style>
    <style amp-boilerplate>
      body {
        -webkit-animation: -amp-start 8s steps(1, end) 0s 1 normal both;
        -moz-animation: -amp-start 8s steps(1, end) 0s 1 normal both;
        -ms-animation: -amp-start 8s steps(1, end) 0s 1 normal both;
        animation: -amp-start 8s steps(1, end) 0s 1 normal both;
      }
      h1 {
          font-weight: 900;
          font-family: Montserrat, sans-serif;
          color: white;
          position: absolute;
          bottom: 1rem;
          padding: 1rem;
      }
      h1 mark{
        font-size: 1.5rem;
        line-height: 2rem;
        background: #f24968 20%;
      }
      .pure-button-primary {
        background: #f24968!important;
        color: #000!important;
        font-weight: 800;
	      font-family: Montserrat, sans-serif;
        margin:10px 5px 10px 5px;
      }
      .cta{
        margin: auto;
        width: 60%;
        padding: 10px;
        padding-top: 50px;
      }
      @-webkit-keyframes -amp-start {
        from {
          visibility: hidden;
        }
        to {
          visibility: visible;
        }
      }
      @-moz-keyframes -amp-start {
        from {
          visibility: hidden;
        }
        to {
          visibility: visible;
        }
      }
      @-ms-keyframes -amp-start {
        from {
          visibility: hidden;
        }
        to {
          visibility: visible;
        }
      }
      @-o-keyframes -amp-start {
        from {
          visibility: hidden;
        }
        to {
          visibility: visible;
        }
      }
      @keyframes -amp-start {
        from {
          visibility: hidden;
        }
        to {
          visibility: visible;
        }
      }
    </style>
    <link rel="stylesheet" href="https://unpkg.com/purecss@2.0.5/build/pure-min.css" integrity="sha384-LTIDeidl25h2dPxrB2Ekgc9c7sEC3CWGM6HeFmuDNUjX76Ert4Z4IY714dhZHPLd" crossorigin="anonymous">
    <noscript
      ><style amp-boilerplate>
        body {
          -webkit-animation: none;
          -moz-animation: none;
          -ms-animation: none;
          animation: none;
        }
      </style></noscript
    >
  </head>
  <body>
    <amp-story
      standalone
      title="{{storyTitle}}"
      publisher="{{storyPublisher}}"
      publisher-logo-src="{{publisherLogoSource}}"
      poster-portrait-src="{{posterPortraitSource}}"
    >
    
{% for page in links %}
      <amp-story-page id="page-{{loop.index}}">
        <amp-story-grid-layer template="fill">
          <amp-img
            src="{{page}}"
            width="900"
            height="1600"
          >
          </amp-img>
        </amp-story-grid-layer>
        <amp-story-grid-layer template="vertical">
          <h1 animate-in="fly-in-bottom"> 
            <mark>
               {{titles[loop.index - 1]}} 
               <br>
               <small>{{descriptions[loop.index - 1]}} </small>
            </mark>
          </h1>
        </amp-story-grid-layer>
        {# <amp-story-cta-layer>
          <div class="cta">
            <a 
              href="{{page}}" 
              class="button pure-button-primary pure-button" 
              animate-in="rotate-in-left"
            ><span><i class="fa fa-link"></i> Link</span></a>
          </div>
        </amp-story-cta-layer> #}
      </amp-story-page>
{% endfor %}
        <amp-story-bookend src="bookendv1.json" layout="nodisplay">
      </amp-story-bookend>
    </amp-story>    
  </body>
</html>